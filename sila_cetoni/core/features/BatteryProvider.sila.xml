                        <Offset>0</Offset>
                        <UnitComponent>
                            <SIUnit>Kilogram</SIUnit>
                            <Exponent>1</Exponent>
                        </UnitComponent>
                        <UnitComponent>
                            <SIUnit>Meter</SIUnit>
                            <Exponent>2</Exponent>
                        </UnitComponent>
                        <UnitComponent>
                            <SIUnit>Second</SIUnit>
                            <Exponent>-3</Exponent>
                        </UnitComponent>
                        <UnitComponent>
                            <SIUnit>Ampere</SIUnit>
                            <Exponent>-1</Exponent>
                        </UnitComponent>
                    </Unit>
                </Constraints>
            </Constrained>
        </DataType>
    </Property>
</Feature>
